<view class="basic-info">
  <view class="info-row">
    <text class="label">姓名：</text>
    <text class="value">{{name}}</text>
    <text class="label">性别：</text>
    <text class="value">{{gender === 'male' ? '男' : '女'}}</text>
  </view>
  <view class="info-row">
    <text class="label">出生：</text>
    <text class="value">{{birthDateTime}}</text>
  </view>
  <view class="info-row">
    <text class="label">地点：</text>
    <text class="value">{{region[0]}} {{region[1]}} {{region[2]}}</text>
  </view>
</view> 